@model IEnumerable<google_reviews.Models.GoogleDriveDocument>
@{
    ViewData["Title"] = "Google Drive Documents";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>@ViewData["Title"]</h1>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="TestConnection" class="btn btn-secondary">Test Connection</a>
                }
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title">Access Document</h5>
                </div>
                <div class="card-body">
                    <form asp-action="AccessDocument" method="post">
                        <div class="row">
                            <div class="col-md-9">
                                <input type="text" 
                                       name="documentUrl" 
                                       class="form-control" 
                                       placeholder="Enter Google Drive document URL or ID..."
                                       required>
                            </div>
                            <div class="col-md-3">
                                <button type="submit" class="btn btn-primary w-100">Access Document</button>
                            </div>
                        </div>
                        <small class="form-text text-muted mt-2">
                            Enter a Google Drive share URL (e.g., https://docs.google.com/document/d/1ABC.../edit) or just the document ID
                        </small>
                        @if (User.IsInRole("Admin"))
                        {
                            <div class="mt-3 pt-3 border-top">
                                <p class="small text-muted">Quick Import from Known Sheet:</p>
                                <a asp-action="ImportFromSheet" asp-route-id="1P56tEmfFspFkSjORqkV2UauoGy3yDURg8iIKiaQSHE4" 
                                   class="btn btn-sm btn-success">
                                    <i class="fas fa-download"></i> Import from Company Sheet
                                </a>
                            </div>
                        }
                        @Html.AntiForgeryToken()
                    </form>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Shared Documents (@Model.Count())</h5>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="row">
                            @foreach (var doc in Model)
                            {
                                <div class="col-md-6 col-lg-4 mb-3">
                                    <div class="card h-100">
                                        <div class="card-body">
                                            <h6 class="card-title">
                                                <a asp-action="Document" asp-route-id="@doc.Id" class="text-decoration-none">
                                                    @doc.Name
                                                </a>
                                            </h6>
                                            <p class="card-text">
                                                <small class="text-muted">
                                                    Type: @GetFriendlyMimeType(doc.MimeType)<br>
                                                    Modified: @doc.ModifiedTime.ToString("MMM dd, yyyy")<br>
                                                    @if (doc.Owners.Any())
                                                    {
                                                        <span>Owner: @string.Join(", ", doc.Owners)</span><br>
                                                    }
                                                    @if (doc.Size > 0)
                                                    {
                                                        <span>Size: @FormatFileSize(doc.Size)</span>
                                                    }
                                                </small>
                                            </p>
                                        </div>
                                        <div class="card-footer">
                                            <div class="btn-group btn-group-sm w-100" role="group">
                                                <a asp-action="Document" asp-route-id="@doc.Id" class="btn btn-outline-primary">View</a>
                                                @if (!string.IsNullOrEmpty(doc.WebViewLink))
                                                {
                                                    <a href="@doc.WebViewLink" target="_blank" class="btn btn-outline-secondary">Open in Drive</a>
                                                }
                                                @if (User.IsInRole("Admin") && doc.MimeType == "application/vnd.google-apps.spreadsheet")
                                                {
                                                    <a asp-action="ImportFromSheet" asp-route-id="@doc.Id" class="btn btn-outline-success">
                                                        <i class="fas fa-download"></i> Import
                                                    </a>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <p class="text-muted">No shared documents found.</p>
                            <p class="small">Documents shared with the service account will appear here.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    private string GetFriendlyMimeType(string mimeType)
    {
        return mimeType switch
        {
            "application/vnd.google-apps.document" => "Google Doc",
            "application/vnd.google-apps.spreadsheet" => "Google Sheet",
            "application/vnd.google-apps.presentation" => "Google Slides",
            "application/vnd.google-apps.form" => "Google Form",
            "application/pdf" => "PDF",
            "text/plain" => "Text File",
            "application/json" => "JSON",
            "text/csv" => "CSV",
            _ => mimeType.Split('/').LastOrDefault()?.ToUpper() ?? "Unknown"
        };
    }
    
    private string FormatFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len = len / 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }
}